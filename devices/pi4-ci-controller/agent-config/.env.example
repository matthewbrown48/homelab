# Woodpecker Agent Configuration for Pi Zero Workers
# Copy this to .env and configure for each Pi Zero

# Pi 4 Controller IP
PI4_CONTROLLER_IP=192.168.1.100

# Agent Secret (must match Pi 4 controller)
WOODPECKER_AGENT_SECRET=same-secret-as-pi4-controller

# Unique hostname for this worker
# Change for each Pi Zero: pi-zero-1, pi-zero-2, etc.
WOODPECKER_HOSTNAME=pi-zero-1

# Max concurrent workflows (keep at 1 for Pi Zero)
WOODPECKER_MAX_WORKFLOWS=1
