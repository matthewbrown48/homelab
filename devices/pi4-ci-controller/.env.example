# Pi 4 - Woodpecker CI Controller Configuration

# Timezone
TZ=America/New_York

# Woodpecker Server Configuration
WOODPECKER_HOST=http://<pi4-ip>:8000
WOODPECKER_SERVER_ADDR=:8000

# GitHub Integration
# Create OAuth App: https://github.com/settings/developers
WOODPECKER_GITHUB=true
WOODPECKER_GITHUB_CLIENT=your-github-oauth-client-id
WOODPECKER_GITHUB_SECRET=your-github-oauth-client-secret

# Admin user (your GitHub username)
WOODPECKER_ADMIN=your-github-username

# Agent Secret (generate with: openssl rand -hex 32)
WOODPECKER_AGENT_SECRET=generate-a-random-secret-here

# Database (PostgreSQL)
POSTGRES_USER=woodpecker
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=woodpecker

# Docker Registry
REGISTRY_PORT=5000
REGISTRY_USERNAME=homelab
REGISTRY_PASSWORD=change-this-secure-password

# Network
HOMELAB_NETWORK=homelab-network

# Storage paths
WOODPECKER_DATA_PATH=./data
REGISTRY_DATA_PATH=./registry

# Tailscale (for secure remote access)
TAILSCALE_HOSTNAME=pi4-ci
# Get your auth key from: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxx
