# Pi 5 Open Media Vault Configuration
# Copy this to .env and fill in your values

# Timezone
TZ=America/New_York

# Portainer Configuration
PORTAINER_PORT=9443

# Homepage Dashboard
HOMEPAGE_PORT=3000

# Duplicati Backup
DUPLICATI_PORT=8200

# Tailscale (for secure remote access)
TAILSCALE_HOSTNAME=homelab-pi5
# Get your auth key from: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxx

# OMV Shared Folders (adjust these paths to match your OMV setup)
# Find these in OMV web UI under Storage > Shared Folders
OMV_DATA_PATH=/srv/dev-disk-by-uuid-xxxxx/data
OMV_MEDIA_PATH=/srv/dev-disk-by-uuid-xxxxx/media
OMV_BACKUPS_PATH=/srv/dev-disk-by-uuid-xxxxx/backups

# Network
HOMELAB_NETWORK=homelab-network

# Watchtower (auto-update containers)
WATCHTOWER_SCHEDULE=0 0 4 * * *  # 4 AM daily
