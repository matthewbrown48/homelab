# Global Environment Variables Example
# Copy this to your shell profile (~/.bashrc or ~/.zshrc)

# Device IP Addresses (CHANGE THESE TO YOUR ACTUAL IPs)
export PI5_HOST=10.0.0.10          # Pi 5 OMV NAS
export PI4_HOST=10.0.0.11          # Pi 4 CI Controller
export JELLYFIN_HOST=10.0.0.12     # Jellyfin Media Server

# Deployment Configuration
export HOMELAB_DEPLOY_USER=deploy
export HOMELAB_DEPLOY_KEY=~/.ssh/homelab_deploy

# Optional: Ansible Configuration
export ANSIBLE_INVENTORY=~/projects/homelab/ansible/inventory.yml
